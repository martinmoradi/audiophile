{
  "name": "audiophile",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:nuke": "export $(cat .env | grep -v '^#' | xargs) && psql \"${POSTGRES_URL}\" -c 'DROP SCHEMA IF EXISTS public CASCADE; CREATE SCHEMA public;'",
    "dev": "next dev",
    "lint": "next lint",
    "start": "next start",
    "test": "vitest run",
    "docker:e2e": "docker run -it --rm --ipc=host -v ~/Documents/Dev/audiophile:/audiophile -w /audiophile -p 8080:8080 mcr.microsoft.com/playwright:v1.45.1-jammy /bin/bash -c \"npm install -g pnpm && bash\"",
    "e2e": "exec playwright test",
    "e2e:ui": "exec playwright test --ui",
    "e2e:trace": "exec playwright test --show-trace",
    "e2e:wk": "exec playwright test",
    "e2e:wk:ui": "exec playwright test --ui",
    "e2e:wk:trace": "exec playwright test --show-trace",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.4.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@t3-oss/env-nextjs": "^0.10.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.30.10",
    "drizzle-zod": "^0.5.1",
    "geist": "^1.3.1",
    "lucide-react": "^0.408.0",
    "next": "^14.2.5",
    "next-auth": "5.0.0-beta.19",
    "postgres": "^3.4.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.4",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/eslint": "^8.56.11",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.0.4",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.21.4",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "eslint-plugin-drizzle": "^0.2.3",
    "husky": "^9.1.2",
    "jsdom": "^24.1.1",
    "postcss": "^8.4.40",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.4",
    "vitest": "^2.0.4"
  },
  "ct3aMetadata": {
    "initVersion": "7.36.1"
  },
  "packageManager": "pnpm@9.5.0"
